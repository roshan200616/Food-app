<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Menu Management</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/restaurantMenu.css">
</head>

<body>

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- Sidebar -->
            <%- include('../partials/sidebar.ejs') %>

                <!-- Main Content -->
                <div class="col-10 main-content p-4">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="text-white">Menu Management</h4>
                        <button class="btn btn-warning" onclick="window.location.href=`/restaurants/menu/add`">+ Add
                            Item</button>
                    </div>

                    <div class="d-flex justify-content-center"> <!-- Menu Items Table -->
                        <div class="col-8">
                            <div class="card table-card p-3">
                                <h5 class="mb-3">Menu Items</h5>

                                <table class="table table-dark table-hover align-middle">
                                    <thead>
                                        <tr>
                                            <th>S.no</th>
                                            <th>Food</th>
                                            <th>Category</th>
                                            <th>Price</th>
                                            <th>Prepare Time</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </div>

        </div>
    </div>
    </div>

</body>

</html>