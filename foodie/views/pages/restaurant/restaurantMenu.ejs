<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Menu Management</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/restaurantMenu.css">
    <style>
        .card {
            background-color: #1e293b;
            color: white;
            width: 48rem;
        }
        .action{
            display: flex;
        }
        .deleteIcon{
            border-color: transparent !important;
        }
    </style>
</head>

<body>

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs') %>

                <!-- Main Content -->
                <div class="col-10 main-content p-4">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="text-white">Menu Management</h4>
                        <button class="btn btn-warning" onclick="window.location.href=`/restaurants/menu/add`">+ Add
                            Item</button>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="col-8">
                            <div class="card table-card p-3 card">
                                <h5 class="mb-3">Menu Items</h5>

                                <table class="table  table-dark text-nowrap">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Prepareing time</th>
                                            <th scope="col">Meal type</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Sugar</th>
                                            <th scope="col">Calories</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%data.forEach(item=>{%>
                                            <tr>
                                                <td>
                                                    <%=item.food_item%>
                                                </td>
                                                <td>
                                                    <%=item.prepare_timing%>
                                                </td>
                                                <td>
                                                    <%=item.meal_type%>
                                                </td>
                                                <td>
                                                    <%=item.category%>
                                                </td>
                                                <td>
                                                    <%=item.sugar%>
                                                </td>
                                                <td>
                                                    <%=item.food_calories%>
                                                </td>
                                                <td>
                                                    <%=item.price%>
                                                </td>
                                                <td class="action">
                                                    <a href="admin/edit/<%= item.food_Item_id %>"
                                                        class="text-reset text-decoration-none"
                                                        style="text-decoration: none !important;">
                                                        ‚úèÔ∏è
                                                    </a>
                                                    <button onclick="deleteAdmin(<%=item.food_Item_id%>)" class="bg-transparent border deleteIcon">üóëÔ∏è</button>
                                                </td>


                                            </tr>
                                            <%})%>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>


                </div>

        </div>
    </div>
    </div>

</body>

</html>