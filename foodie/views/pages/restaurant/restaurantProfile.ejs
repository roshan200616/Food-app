<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Restaurant Profile</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/restaurantHome.css">

    <style>
        .profile-card {
            background-color: #1f1f1f;
            border-radius: 16px;
            color: white;
        }

        .profile-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #dc3545;
        }

        .form-control {
            background-color: #2b2b2b;
            border: none;
            color: white;
        }

        .form-control:focus {
            background-color: #2b2b2b;
            color: white;
            box-shadow: none;
            border: 1px solid #dc3545;
        }
    </style>
</head>

<body>

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs') %>

                <!-- Main Content -->
                <div class="col-10 p-4">

                    <h4 class="text-white mb-4">Restaurant Profile</h4>

                    <div class="card profile-card p-4">

                        <!-- Profile Header -->
                        <div class="d-flex align-items-center gap-4 mb-4">
                            <img src="/images/restaurant.png" class="profile-img" alt="Restaurant">
                            <div>
                                <h5 class="mb-1">Foodie Restaurant</h5>
                                <p class="text-muted mb-0">South Indian â€¢ Chinese</p>
                            </div>
                        </div>

                        <!-- Profile Form -->
                        <form>
                            <div class="row g-3">

                                <div class="col-md-6">
                                    <div class="profile-label">Restaurant Name: <%=data.name%></div>
                                </div>

                                <div class="col-md-6">
                                    <div class="profile-label">Owner Name: <%=data.owner_name%></div>
                                </div>

                                <div class="col-md-6">
                                    <div class="profile-label">Email: <%=data.email%></div>
                                </div>

                                <div class="col-md-6">
                                    <div class="profile-label">Phone: <%=data.phone%></div>
                                </div>

                                <div class="col-md-6">
                                    <div class="profile-label">Location: <%=data.address%></div>
                                </div>

                                <div class="col-md-6">
                                    <div class="profile-label">Cuisine Type: <%=data.cuisine_type%></div>
                                </div>

                            </div>


                            <!-- Actions -->
                            <div class="mt-4 d-flex gap-3">

                                <button type="button" class="btn btn-outline-light rounded-pill px-4">
                                    Back
                                </button>
                                <button type="submit" class="btn btn-danger rounded-pill px-4 ">
                                    Edit Your Profile
                                </button>


                            </div>
                        </form>