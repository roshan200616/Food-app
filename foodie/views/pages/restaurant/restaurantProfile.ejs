<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Restaurant Profile</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/restaurantHome.css">

    <style>
        .profile-card {
            background-color: #1f1f1f;
            border-radius: 16px;
            color: white;
        }

        .profile-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #dc3545;
        }

        .profile-label {
            font-size: 15px;
            color: #ddd;
        }
    </style>
</head>

<body>

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs') %>

                <!-- Main Content -->
                <div class="col-10 p-4">

                    <h4 class="text-white mb-4">Restaurant Profile</h4>

                    <div class="card profile-card p-4">

                        <!-- Profile Header -->
                        <div class="d-flex align-items-center gap-4 mb-4">
                            <img src="/images/restaurant.png" class="profile-img" alt="Restaurant">

                            <div>
                                <h5 class="mb-1">
                                    <%= data?.name || 'Restaurant Name' %>
                                </h5>
                                <p class="text-muted mb-0">
                                    <%= data?.cuisine_type || 'Cuisine Type' %>
                                </p>
                            </div>
                        </div>

                        <!-- Profile Details -->
                        <div class="row g-3">

                            <div class="col-md-6">
                                <div class="profile-label">
                                    Restaurant Name: <strong>
                                        <%= data?.name || '-' %>
                                    </strong>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="profile-label">
                                    Owner Name: <strong>
                                        <%= data?.owner_name || '-' %>
                                    </strong>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="profile-label">
                                    Email: <strong>
                                        <%= data?.email || '-' %>
                                    </strong>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="profile-label">
                                    Phone: <strong>
                                        <%= data?.phone || '-' %>
                                    </strong>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="profile-label">
                                    Address: <strong>
                                        <%= data?.address || '-' %>
                                    </strong>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="profile-label">
                                    Cuisine Type: <strong>
                                        <%= data?.cuisine_type || '-' %>
                                    </strong>
                                </div>
                            </div>

                        </div>

                        <!-- Actions -->
                        <div class="mt-4 d-flex gap-3">
                            <button type="button" class="btn btn-danger rounded-pill px-4"
                                onclick="deleteRestaurant(event)">
                                Delete
                            </button>

                            <button type="button" class="btn btn-warning rounded-pill px-4"
                                onclick="window.location.href='/restaurants/edit'">
                                Edit Your Profile
                            </button>
                        </div>

                    </div>
                </div>
        </div>
    </div>

</body>
<script>
    function deleteRestaurant(event) {
        const id = '<%= data.restaurant_id %>'
        const myHeaders = new Headers();
        myHeaders.append("Content-Type", "application/json");

        const requestOptions = {
            method: "DELETE",
            headers: myHeaders,
            redirect: "follow"
        };

        fetch(`http://localhost:3000/api/restaurants/${id}`, requestOptions)
            .then(async (response)=>{
                if(response.ok){
                    window.location.href=`http://localhost:3000/foodie`
                }
                else{
                    console.log(response.text())
                    alert('server error')
                }
            })
            
    }
</script>

</html>